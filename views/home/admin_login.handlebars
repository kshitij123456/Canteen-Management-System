 <div>
       <h2 class="large text-primary">Admin Login</h2>
       {{#if error}}
       <br>
                  <div class="fail">
                  <strong>{{error}} </strong>  
                  </div>
        <br>
                  {{/if}}
<form action="/admin" method="post" class="form">
      
        
         <div class="form-group">
             <label ><b>Username</b></label> 
        <input  type="email" value = '{{email}}' name="email" placeholder="Username">
        <p>The username is Alphanumeric and can contain underscores(_) Must contain atleast 5 Characters</p></div>
        
          <div class="form-group">
              <label ><b>Passsword</b></label> 
        <input value='{{password}}' type="password" name="password" placeholder="Password">
        <p>The Password is Alphanumeric and can contain @ and hyphens(-) Must contain 8 to 20 Characters</p>
        </div>
    
        
        <button type="submit" class="registerbtn">Login</button>
        
        <script src="admin_login_js.js"></script>
    </form>

 </div>
    
 